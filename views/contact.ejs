<%- include('./includes/navbar.ejs') %>
<div class="container mt-5">
	<div class="bg-light">
		<div class="w-25 text-center mx-auto">
			<%- include('./includes/loginMessage.ejs') %> <%-
			include('./includes/validationErrors.ejs') %>
		</div>

		<form action="/contact" class="mx-auto w-50" method="post">
			<legend class="text-center">تماس با ما</legend>
			<fieldset>
				<div class="form-group">
					<label class="col-md-3 custom-control-label" for="name">
						نام و نام خانوادگی
					</label>
					<div class="col-md-9">
						<input
							type="text"
							name="fullname"
							id="name"
							placeholder="نام و نام خانوادگی"
							class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 custom-control-label" for="email">
						آدرس ایمیل
					</label>
					<div class="col-md-9">
						<input
							class="form-control"
							name="email"
							id="email"
							placeholder="ایمیل شما"
							type="text" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 custom-control-label" for="message">
						پیام شما
					</label>
					<div class="col-md-9">
						<textarea
							class="form-control"
							name="message"
							id="message"
							placeholder="لطفا پیام خود را در اینجا نوشته و ارسال کنید"
							rows="5">
						</textarea>
					</div>
				</div>
				<div class="w-25 text-center">
					<img src="/captcha.png" alt="captcha" />
					<input
						type="text"
						class="form-control"
						name="captcha"
						placeholder="کد امنیتی" />
				</div>
				<div class="form-group mt-4">
					<button type="submit" class="btn btn-primary btn-lg">
						ارسال پیام
					</button>
				</div>
			</fieldset>
		</form>
	</div>
</div>
