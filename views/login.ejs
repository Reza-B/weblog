<form class="form-signin" action="/users/login" method="POST">
   <h1 class="h3 mb-3 font-weight-normal">ورود به بخش مدیریت</h1>
   <%- include("./includes/loginMessage.ejs") -%>
   <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
   <input type="email" name="email" id="inputEmail" class="form-control mb-2" placeholder="آدرس ایمیل" required autofocus />
   <label for="inputPassword" class="sr-only">کلمه عبور</label>
   <input type="password" name="password" id="inputPassword" class="form-control" placeholder="کلمه عبور" required />
   <div class="checkbox mb-3">
      <label> <input type="checkbox" name="remember" value="remember-me" /> من را به خاطر بسپار </label>
   </div>
   <div class="form-group">
      <div class="g-recaptcha" data-sitekey="6Lf9qTMnAAAAABmFlBUmXlguIbnvs685X-UhDa-o"></div>
   </div>

   <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
</form>
